<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="15dp"
        android:textSize="48sp"
        android:fontFamily="monospace"
        android:gravity="end|bottom"
        style="@style/CustomTextViewStyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:orientation="vertical"
        android:gravity="center">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/BtSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/rectangle_button_background"
                android:shadowColor="@color/my_light_primary"
                android:onClick="onDigit"
                android:textSize="32sp"
                style="@style/ButtonStyle"
                android:layout_margin="5dp"

                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:id="@+id/BtEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_button_background"
                android:onClick="onDigit"
                android:textSize="32sp"
                style="@style/ButtonStyle"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/BtNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_button_background"
                android:onClick="onDigit"
                android:textSize="32sp"
                style="@style/ButtonStyle"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/BtDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_button_background"
                android:textSize="32sp"
                style="@style/ButtonStyle"
                tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/BtFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="ButtonStyle,HardcodedText" />
                <Button
                    android:id="@+id/BtFive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/BtSix"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/BtMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="*"
                    android:paddingTop="15dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/BtOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="ButtonStyle,HardcodedText" />
                <Button
                    android:id="@+id/BtTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/BtThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/BtMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:textSize="40sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/BtZero"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="0"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:onClick="onDigit"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="ButtonStyle,HardcodedText" />
                <Button
                    android:id="@+id/BtClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="C"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/BtPlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:layout_margin="5dp"
                    android:background="@drawable/rectangle_button_background"
                    android:textSize="32sp"
                    style="@style/ButtonStyle"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                android:id="@+id/BtEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:layout_margin="5dp"
                android:background="@drawable/rectangle_button_background"
                android:textSize="48sp"
                style="@style/ButtonStyle"
                tools:ignore="HardcodedText" />
            </LinearLayout>
    </LinearLayout>



</LinearLayout>